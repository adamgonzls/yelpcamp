<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds" method="POST">
      <div class="mb-3">
        <label class="form-label" for="name">Name:</label>
        <input
          type="text"
          id="name"
          name="campground[name]"
          placeholder="Meadow Vista"
          class="form-control"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image URL:</label>
        <input
          type="text"
          id="image"
          placeholder="https://www.somedomain.com/someimage.jpg"
          name="campground[image]"
          class="form-control"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Price per night:</label>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="price-label">$</span>
          </div>
          <input
            id="price"
            name="campground[price]"
            type="number"
            class="form-control"
            placeholder="99"
            aria-label="Username"
            aria-describedby="price-label"
          />
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location:</label>
        <input
          type="text"
          id="location"
          placeholder="Big Bend, Texas"
          name="campground[location]"
          class="form-control"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description:</label>
        <textarea
          class="form-control"
          name="campground[description]"
          id="description"
          rows="5"
          placeholder="A wonderful national park is around the corner..."
        ></textarea>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add Campground</button>
      </div>
    </form>
    <a href="/campgrounds">All campgrounds</a>
  </div>
</div>
