<%- include('../partials/head') %>
  <body>
    <%- include('../partials/header') %>
    <h1>New Campground</h1>
    <form action="/campgrounds" method="POST">
      <div>
        <label for="name">Name:</label>
        <input type="text" id="name" name="campground[name]" placeholder="Meadow Vista">
      </div>
      <div>
        <label for="location">Location:</label>
        <input type="text" id="location" placeholder="Big Bend, Texas" name="campground[location]">
      </div>
      <div>
        <label for="description">Description:</label>
        <input type="text" id="description" placeholder="A wonderful national park is around the corner..." name="campground[description]">
      </div>
      <button>Add Campground</button>
    </form>
    <a href="/campgrounds">All campgrounds</a>
  </body>
</html>