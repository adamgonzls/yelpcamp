<%- include('../partials/head') %>
  <body>
    <%- include('../partials/header') %>
    <h1>Edit Campground</h1>
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
      <div>
        <label for="name">Name:</label>
        <input type="text" id="name" name="campground[name]" placeholder="Meadow Vista" value="<%= campground.name %>">
      </div>
      <div>
        <label for="location">Location:</label>
        <input type="text" id="location" placeholder="Big Bend, Texas" name="campground[location]" value="<%= campground.location %>">
      </div>
      <div>
        <label for="description">Description:</label>
        <input type="text" id="description" placeholder="A wonderful national park is around the corner..." name="campground[description]" value="<%= campground.description %>">
      </div>
      <button>Save changes</button>
    </form>
    <a href="/campgrounds">All campgrounds</a>
  </body>
</html>